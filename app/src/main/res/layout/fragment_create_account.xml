<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#191A30"
    android:padding="30dp"
    android:windowSoftInputMode="adjustResize"
    android:gravity="center"
    android:id="@+id/create_account_fragment"
    tools:context=".Create_account">

    <RelativeLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:windowSoftInputMode="adjustResize"
        >

        <TextView
            android:id="@+id/create_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create Account"
            android:textColor="#56ab2f"
            android:textSize="30dp"
            android:fontFamily="@font/chesnagroteskmedium"

            android:textStyle="bold" />

        <TextView
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/create_account"
            android:layout_marginTop="30dp"
            android:text="Username :"
            android:textColor="#56ab2f"
            android:fontFamily="@font/chesnagroteskmedium"

            android:textSize="20dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editusername"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@id/username"
            android:layout_marginTop="5dp"
            android:background="@drawable/edit_text"
            android:padding="10dp"
            android:textColor="#56ab2f"
            android:fontFamily="@font/chesnagroteskmedium"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editusername"
            android:layout_marginTop="30dp"
            android:text="Email address :"
            android:textColor="#56ab2f"
            android:textSize="20dp"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/editemail"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@id/phone"
            android:layout_marginTop="5dp"
            android:background="@drawable/edit_text"
            android:padding="10dp"
            android:textColor="#56ab2f"
            android:fontFamily="@font/chesnagroteskmedium"
            android:textColorHint="@color/white"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editemail"
            android:layout_marginTop="30dp"
            android:text="Password :"
            android:textColor="#56ab2f"
            android:fontFamily="@font/chesnagroteskmedium"
            android:textSize="20dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editpassword"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@id/password"
            android:layout_marginTop="5dp"
            android:background="@drawable/edit_text"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColor="#56ab2f"
            android:fontFamily="@font/chesnagroteskmedium"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/editpassword"
            android:layout_marginTop="40dp"
            android:backgroundTint="#56ab2f"
            android:fontFamily="@font/chesnagroteskmedium"
            android:gravity="center"
            android:onClick="Creat"
            android:text="create account"
            android:textColor="@color/white"
            android:textSize="17dp"
            app:cornerRadius="5sp" />

    </RelativeLayout>
</RelativeLayout>